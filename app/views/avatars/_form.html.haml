= form_for [@user, @avatar], html: { multipart: true } do |f|
  - if @avatar.errors.any?
    #error_explanation
      %h2= "#{pluralize(@avatar.errors.count, "error")} prohibited this avatar from being saved:"
      %ul
        - @avatar.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, autofocus: true
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :signature
    = f.text_area :signature
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :image
    = f.file_field :image
  / .field
  /   = f.label :user_id
  /   = f.number_field :user_id
  .actions
    = f.submit 'Save'
